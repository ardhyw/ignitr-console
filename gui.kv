# vim: set foldmarker={,} foldlevel=0:

<TimingTable@GridLayout>:
    spacing: 2

<Gauge@BoxLayout>:
    padding: 5
    orientation: 'vertical'

<GaugeLabel@Label>:
    size_hint_y: None
    height: '32sp'
    font_size: '16sp'

<GaugeValue@Label>:
    size_hint_y: None
    height: '64sp'
    font_size: '64sp'

<RootWidget>:
    spacing: 10
    orientation: 'vertical'
    
    sm: sm

    BoxLayout:
        size_hint_y: None
        height: '48sp'
        ToggleButton:
            group: 'header'
            state: 'down'
            text: 'Dashboard'
            size_hint_y: None
            on_release: sm.current = 'dashboard'
        ToggleButton:
            group: 'header'
            text: 'Settings'
            size_hint_y: None
            on_release: sm.current = 'settings'

    ScreenManager:
        id: sm
        # dashboard screen {
        Screen:
            name: 'dashboard'
            BoxLayout:
                spacing: 30
                orientation: 'vertical'
                GridLayout:
                    rows: 2
                    spacing: 10
                    # RPM
                    Gauge:
                        GaugeValue:
                            text: '7000'
                            id: rpm
                        GaugeLabel:
                            text: 'RPM'
                    # Advance
                    Gauge:
                        GaugeValue:
                            text: '22°'
                            id: adv
                        GaugeLabel:
                            text: 'Advance'
                    # MAP
                    Gauge:
                        GaugeValue:
                            text: '2'
                            id: load
                        GaugeLabel:
                            text: 'Load'
                    # Temp
                    Gauge:
                        GaugeValue:
                            text: '90°'
                            id: clt
                        GaugeLabel:
                            text: 'Coolant temp.'
                    # Batt
                    Gauge:
                        GaugeValue:
                            text: '14'
                            id: bat
                        GaugeLabel:
                            text: 'Battery'
                    # Gear
                    Gauge:
                        GaugeValue:
                            text: 'D'
                            id: gear
                        GaugeLabel:
                            text: 'Gear'

                # }
                TimingTable:

        Screen:
            name: 'settings'
            Label:
                text: 'Settings'
